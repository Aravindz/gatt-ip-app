<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/urlContainer"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/align_60"
        android:background="@color/topbg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/logo_width"
            android:layout_height="@dimen/logo_hight"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/logo" />
        <Button
            android:id="@+id/localBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/align_10"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:text="@string/local"
            android:textColor="@color/bgblue"
            android:textSize="@dimen/text_size" />
        <Button
            android:id="@+id/logBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/align_10"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:text="@string/log"
            android:textColor="@color/bgblue"
            android:textSize="@dimen/text_size" />    
    </RelativeLayout>
 
    <RelativeLayout
        android:id="@+id/labelContainer"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/header_size"
        android:layout_below="@+id/urlContainer"
        android:orientation="horizontal" 
        android:background="@color/topbgblue">

        <TextView
            android:id="@+id/lbl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/align_20"
            android:layout_centerVertical="true"
            android:text="@string/location"
            android:textColor="@color/white" 
            android:textSize="@dimen/header_text" />
   </RelativeLayout> 
    
   <LinearLayout
        android:id="@+id/addressContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_below="@+id/labelContainer"
        android:orientation="horizontal"  >
        
        <EditText
            android:id="@+id/socket_address"
            android:layout_width="@dimen/width"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/align_20"
            android:layout_gravity="left" 
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:textSize="@dimen/hint_size" 
            android:hint="@string/hint" />
        <Button
            android:id="@+id/connectBtn"
            android:layout_width="@dimen/width"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right" 
            android:background="@android:color/transparent"     
            android:text="@string/connect"
            android:textColor="@color/bgblue"
            android:textSize="@dimen/text_size" />
    </LinearLayout> 
   
</RelativeLayout><!-- From: file:/Users/admin/Documents/surya_workspace/github/test2/gatt-ip-app/Android/GATT-IP-APP/res/layout/remote_gattip.xml -->